<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="section-heading">Followed Events</h2>
    </div>
  </div>
  <div class="row text-center">
    <% @posts.each do |post| %>
        <div class="col-md-4">
       <span class="fa-stack fa-4x">
           <i class="fa fa-circle fa-stack-2x text-primary"></i>
           <i class="fa fa-user fa-stack-1x fa-inverse"></i>
      </span>
          <h4 class="service-heading"><%= post.title %> </h4>
          <p class="text-muted"> <%= post.address %> </p>
          <p class="text-muted"> <%= post.body %> </p>
          <%= link_to 'More Details', post %>
        </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="section-heading">Your Events</h2>
    </div>
  </div>
  <div class="row text-center">
    <% @your_posts.each do |post| %>
        <div class="col-md-4">
       <span class="fa-stack fa-4x">
           <i class="fa fa-circle fa-stack-2x text-primary"></i>
           <i class="fa fa-user fa-stack-1x fa-inverse"></i>
      </span>
          <h4 class="service-heading"><%= post.title %> </h4>
          <p class="text-muted"> <%= post.address %> </p>
          <p class="text-muted"> <%= post.body %> </p>
          <%= link_to 'More Details', post %>
          <%= link_to 'Delete Event', {:controller=>:posts,:action=>:destroy, :id=>post}, :method=>:delete %>
        </div>
    <% end %>
  </div>
</div>