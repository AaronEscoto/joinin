<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center">
  			<h2 class="section-heading">This is the event postings page</h2>
  		</div>
  	</div>
<div class="row text-center">
  <% @posts.each do |post| %>
     <div class="col-md-4">
       <span class="fa-stack fa-4x">
           <i class="fa fa-circle fa-stack-2x text-primary"></i>
           <i class="fa fa-user fa-stack-1x fa-inverse"></i>
      </span>
    <h4 class="service-heading"><%= post.title %> </h4>
    <p class="text-muted"> <%= post.address %> </p>
    <p class="text-muted"> <%= post.start_time.to_time.strftime("%b %d, %Y on %I:%M %p") %></p>
    <p class="text-muted"> <%= post.end_time.to_time.strftime("%b %d, %Y on %I:%M %p") %></p>
    <p class="text-muted"> <%= post.body %> </p>
    <%= link_to 'More Details', post %>
    </div>
  <% end %>
</div>

