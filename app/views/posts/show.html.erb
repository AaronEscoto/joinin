
<div class="container">



<div class="page-header">
<h1>Post</h1>
</div>

    <h4 class="service-heading"><%= @post.title %> </h4>
    <p class="text-muted"> <%= @post.address %> </p>
    <p class="text-muted"> <%= @post.start_time.to_time.strftime("%b %d, %Y on %I:%M %p") %></p>
    <p class="text-muted"> <%= @post.end_time.to_time.strftime("%b %d, %Y on %I:%M %p") %></p>
    <p class="text-muted"> <%= @post.body %> </p>

    <%= link_to "Follow", follow_post_path, class: "btn btn-default" %>
	<%= link_to "Home", posts_path, class: "btn btn-default" %>

</div>


